<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leo.relojcalculadora.MainActivity"
    tools:deviceIds="wear_round"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#424bc1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_hex"
            android:background="#424bc1"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#2bcc30"
            android:text="HEX"
            android:onClick="clickTextView" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/et_hex"
            android:background="#ffffff"
            android:text="0"
            android:gravity="center|right"
            android:inputType="none"
            android:paddingRight="2dp"
            android:editable="false"
            android:textSize="10dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_dec"
            android:background="#424bc1"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:text="DEC"
            android:onClick="clickTextView" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/et_dec"
            android:background="#c8c8c8"
            android:text="0"
            android:gravity="center|right"
            android:inputType="none"
            android:paddingRight="2dp"
            android:editable="false"
            android:textSize="10dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_oct"
            android:background="#424bc1"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:text="OCT"
            android:onClick="clickTextView" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/et_oct"
            android:background="#c8c8c8"
            android:text="0"
            android:gravity="center|right"
            android:inputType="none"
            android:paddingRight="2dp"
            android:editable="false"
            android:textSize="10dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_bin"
            android:background="#424bc1"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:text="BIN"
            android:onClick="clickTextView" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/et_bin"
            android:background="#c8c8c8"
            android:text="0"
            android:gravity="center|right"
            android:inputType="none"
            android:paddingRight="2dp"
            android:editable="false"
            android:textSize="10dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#424bc1"
        android:layout_marginLeft="5dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="A"
            android:id="@+id/b_a"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="B"
            android:id="@+id/b_b"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="C"
            android:id="@+id/b_c"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="D"
            android:id="@+id/b_d"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="E"
            android:id="@+id/b_e"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="F"
            android:id="@+id/b_f"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="CE"
            android:id="@+id/b_ce"
            android:textSize="10dp"
            android:background="@drawable/btn_circle"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="C"
            android:id="@+id/b_clear"
            android:textSize="10dp"
            android:background="@drawable/btn_circle"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:onClick="clickButton" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#424bc1"
        android:layout_marginLeft="10dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="5"
            android:id="@+id/b_5"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="6"
            android:id="@+id/b_6"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="7"
            android:id="@+id/b_7"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="8"
            android:id="@+id/b_8"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="9"
            android:id="@+id/b_9"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="1dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="*"
            android:id="@+id/b_mul"
            android:textSize="10dp"
            android:background="@drawable/btn_circle2"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="/"
            android:id="@+id/b_div"
            android:textSize="10dp"
            android:background="@drawable/btn_circle2"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#424bc1"
        android:layout_marginLeft="20dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="1"
            android:id="@+id/b_1"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="1dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="2"
            android:id="@+id/b_2"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="1dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="3"
            android:id="@+id/b_3"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="4"
            android:id="@+id/b_4"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/azul"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="+"
            android:id="@+id/b_sum"
            android:textSize="10dp"
            android:background="@drawable/btn_circle2"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="-"
            android:id="@+id/b_res"
            android:textSize="10dp"
            android:background="@drawable/btn_circle2"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:onClick="clickButton" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="0"
            android:id="@+id/b_0"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:textColor="@color/azul"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center_horizontal"
            android:onClick="clickButton" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="="
            android:id="@+id/b_igual"
            android:textSize="10dp"
            android:background="@drawable/btn_circle3"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/azul"
            android:onClick="clickButton" />

    </LinearLayout>

</LinearLayout>
