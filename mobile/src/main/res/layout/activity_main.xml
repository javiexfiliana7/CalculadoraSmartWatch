<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leo.relojcalculadora.MainActivity"
    android:background="#424bc1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_hex"
                android:background="#38c33f"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="HEX"
                android:onClick="clickTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_hex"
                android:background="#ffffff"
                android:text="0"
                android:gravity="center|right"
                android:inputType="none"
                android:paddingRight="2dp"
                android:editable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_dec"
                android:background="#424bc1"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="DEC"
                android:onClick="clickTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_dec"
                android:background="#c8c8c8"
                android:text="0"
                android:gravity="center|right"
                android:inputType="none"
                android:paddingRight="2dp"
                android:editable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_oct"
                android:background="#424bc1"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="OCT"
                android:onClick="clickTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_oct"
                android:background="#c8c8c8"
                android:text="0"
                android:gravity="center|right"
                android:inputType="none"
                android:paddingRight="2dp"
                android:editable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_bin"
                android:background="#424bc1"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="BIN"
                android:onClick="clickTextView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_bin"
                android:background="#c8c8c8"
                android:text="0"
                android:gravity="center|right"
                android:inputType="none"
                android:paddingRight="2dp"
                android:editable="false" />
        </LinearLayout>


    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2">

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/b_1"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/b_2"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/b_3"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="CE"
            android:id="@+id/b_ce"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/selector_file2"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/b_clear"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@drawable/selector_file2"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/b_4"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/b_5"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/b_6"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/b_sum"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/selector_file3"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/b_res"
            android:layout_row="1"
            android:layout_column="4"
            android:background="@drawable/selector_file3"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/b_7"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/b_8"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/b_9"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/b_mul"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@drawable/selector_file3"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/b_div"
            android:layout_row="2"
            android:layout_column="4"
            android:background="@drawable/selector_file3"
            android:layout_marginBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_a"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="A"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_b"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="B"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_c"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="C"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="99dp"
            android:id="@+id/b_0"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:text="0"
            android:layout_rowSpan="2"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="99dp"
            android:id="@+id/b_igual"
            android:layout_row="3"
            android:layout_column="4"
            android:background="@drawable/selector_file"
            android:text="="
            android:layout_rowSpan="2"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_d"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:text="D"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_e"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:text="E"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_f"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@drawable/selector_file"
            android:layout_marginRight="3dp"
            android:text="F"
            android:layout_marginBottom="3dp"
            android:textSize="20dp"
            android:onClick="clickButton" />

    </GridLayout>

</RelativeLayout>

